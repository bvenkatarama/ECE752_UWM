# running DAXPY in gem5 submission file
universe = docker
docker_image = gcr.io/gem5-test/ubuntu-20.04_all-dependencies


log = run_daxpy.log
error = run_daxpy.err
output = run_daxpy.out

executable = run_daxpy.sh
# DAXPY size
arguments = 65536

should_transfer_files = YES
when_to_transfer_output = ON_EXIT
transfer_input_files = gem5/, daxpy

environment = "TERM=xterm-256color"

request_cpus = 1
request_memory = 20GB
request_disk = 20GB

stream_output = True

queue 1
